{
  "name": "nero-oss",
  "version": "1.26.0",
  "description": "Open source AI companion with terminal, voice, and SMS interfaces",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "nero": "./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pompeii-labs/nero-oss.git"
  },
  "bugs": {
    "url": "https://github.com/pompeii-labs/nero-oss/issues"
  },
  "homepage": "https://github.com/pompeii-labs/nero-oss#readme",
  "keywords": [
    "ai",
    "assistant",
    "cli",
    "terminal",
    "agent",
    "mcp",
    "claude",
    "openrouter"
  ],
  "scripts": {
    "start": "bun .",
    "build": "tsc && chmod +x dist/index.js && chmod +x dist/service/entrypoint.js",
    "dev": "bun --watch src/index.ts",
    "dev:service": "bun --watch src/service/entrypoint.ts",
    "cli": "bun src/index.ts",
    "repl": "bun src/index.ts chat",
    "service": "bun src/service/entrypoint.ts",
    "lint": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts --max-warnings=0",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --check \"**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "release": "./scripts/release.sh",
    "release:prep": "./scripts/release-prep.sh",
    "build:binary": "bun build --compile src/index.ts --outfile dist/nero",
    "build:binaries": "./scripts/build-binaries.sh",
    "prepare": "husky"
  },
  "author": "Pompeii Labs, Inc.",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@openrouter/sdk": "^0.2.9",
    "@pompeii-labs/audio": "^0.2.2",
    "@pompeii-labs/magma": "^1.8.2",
    "@toon-format/toon": "^2.1.0",
    "chalk": "^5.4.1",
    "cli-spinners": "^3.0.0",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "diff": "^8.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "ink": "^5.1.0",
    "ink-multiline-input": "^0.1.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "log-update": "^6.0.0",
    "minimatch": "^10.1.1",
    "openai": "^6.9.1",
    "ora": "^8.0.0",
    "pdf-parse": "^2.4.5",
    "pg": "^8.13.0",
    "playwright": "^1.50.0",
    "react": "^18.2.0",
    "semver": "^7.7.3",
    "twilio": "^5.5.2",
    "ws": "^8.18.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --max-warnings=0",
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/bun": "^1.3.6",
    "@types/cors": "^2.8.17",
    "@types/diff": "^8.0.0",
    "@types/express": "^5.0.1",
    "@types/pdf-parse": "^1.1.5",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.2.0",
    "@types/semver": "^7.7.1",
    "@types/ws": "^8.5.14",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.5",
    "react-devtools-core": "^7.0.1",
    "typescript": "^5.7.2"
  }
}
